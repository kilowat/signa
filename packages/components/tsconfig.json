{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "outDir": "./dist",
        "rootDir": "./src",
        "composite": true,
        "tsBuildInfoFile": "./dist/.tsbuildinfo",
        "baseUrl": "./src",
        "paths": {
            "@signa/core": [
                "../../../packages/core/src"
            ]
        }
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ],
    "references": [
        {
            "path": "../core"
        }
    ]
}