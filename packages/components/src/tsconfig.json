{
    "extends": "../../../tsconfig.json",
    "compilerOptions": {
        "outDir": "dist",
        "rootDir": "src",
        "composite": true,
        "declarationMap": true,
        "tsBuildInfoFile": "dist/.tsbuildinfo",
        "paths": {
            "@signa/core": [
                "../../core/src"
            ]
        }
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "dist",
        "node_modules"
    ],
    "references": [
        {
            "path": "../../core"
        }
    ]
}