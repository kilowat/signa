{
  "name": "todo-app",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "build": "npx tailwindcss -i ./src/input.css -o ./src/tailwind.css --minify",
    "watch": "npx tailwindcss -i ./src/input.css -o ./src/tailwind.css --watch",
    "serve": "live-server src",
    "dev": "concurrently \"npm run watch\" \"npm run serve\""
  },
  "devDependencies": {
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.0.1",
    "live-server": "^1.2.2",
    "postcss": "^8.4.47",
    "tailwindcss": "^3.4.10"
  }
}