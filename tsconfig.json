{
    "compilerOptions": {
        "target": "ES2019",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "declaration": true,
        "declarationMap": false,
        "sourceMap": false,
        "strict": true,
        "skipLibCheck": true,
        "composite": true,
        "forceConsistentCasingInFileNames": true,
        "typeRoots": [
            "./node_modules/@types"
        ]
    },
    "references": [
        {
            "path": "./packages/core"
        },
        {
            "path": "./packages/components"
        }
    ],
    "exclude": [
        "**/node_modules",
        "**/dist"
    ]
}